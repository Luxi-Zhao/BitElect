<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#080908</item>
        <item name="android:textSize">40sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ItemTagText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#080908</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ItemValueText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#212521</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
    </style>


    <style name="MainActivityButtons" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">#33312e</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainActivityText" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainActivityRadioGroup" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">#33312e</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainActivityVerticalLine">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
