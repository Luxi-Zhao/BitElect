<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#080908</item>
        <item name="android:textSize">40sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ItemTagText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#080908</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ItemValueText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#212521</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
