<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lucyzhao.votingapp.MainActivity">


    <Button
        android:id="@+id/scan_passport"
        style="@style/MainActivityButtons"
        android:onClick="enterPassportInfo"
        android:background="@drawable/border"
        android:text="enter passport info" />

    <View
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_more_vert_black_24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="Scan your passport"
        />

    <View
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_more_vert_black_24dp"/>

    <Button
        android:id="@+id/scan_qr_btn"
        style="@style/MainActivityButtons"
        android:onClick="scanQRCode"
        android:background="@drawable/border"
        android:text="scan QR code" />

    <View
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_more_vert_black_24dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Choose a candidate"
        />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border"
        style="@style/MainActivityButtons"
        android:id="@+id/radio_group"
        android:orientation="vertical">
        <RadioButton android:id="@+id/radio_clinton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peter Deutsch"
            />
        <RadioButton android:id="@+id/radio_trump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jagjot Jhajji"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_someoneelse"
            android:text="Luxi Zhao"/>
    </RadioGroup>


    <View
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_more_vert_black_24dp"/>
    <Button
        android:id="@+id/vote_btn"
        style="@style/MainActivityButtons"
        android:onClick="vote"
        android:background="@drawable/border"
        android:text="vote" />


</LinearLayout>
