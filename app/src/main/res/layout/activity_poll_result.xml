<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/poll_result_layout"
    android:background="@color/colorBackground"
    tools:context="com.example.lucyzhao.votingapp.PollResultActivity">


    <TextView
        android:id="@+id/poll_result_title_txt"
        style="@style/MainActivityTitle"
        android:text="Poll Results" />

    <TextView
        android:id="@+id/poll_result_valid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/poll_result_title_txt"
        android:layout_below="@+id/poll_result_title_txt"
        android:textSize="18sp" />

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:id="@+id/poll_result_pb"/>

</RelativeLayout>
