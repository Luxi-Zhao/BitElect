<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/block_prev_hash"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/block"
        android:background="@drawable/block_prevhash"
        android:text="prev hash" />

    <Button
        android:id="@+id/block"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_default_accent" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/block_hash"
        android:layout_alignBottom="@+id/block"
        android:layout_toEndOf="@id/block_prev_hash"
        android:background="@drawable/block_hash"
        android:text="hash" />

</RelativeLayout>